<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/very_light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <!-- Child Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/child_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter child's full name"
            android:background="@drawable/transparent_frame"
            android:padding="8dp" />

        <!-- Child Age -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Age"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/child_age_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter age"
            android:inputType="number"
            android:background="@drawable/transparent_frame"
            android:padding="8dp" />

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_frame"
            android:padding="8dp" />

        <!-- Bio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Short Bio"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/child_bio_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a short description"
            android:background="@drawable/transparent_frame"
            android:padding="8dp"
            android:minLines="3"
            android:gravity="top" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Profile Photo URL"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/profile_photo_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a link"
            android:background="@drawable/transparent_frame"
            android:padding="8dp" />

        <!-- Photo URLs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Photo URLs (comma-separated)"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/photo_urls_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter links separated by commas"
            android:background="@drawable/transparent_frame"
            android:padding="8dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green"
            android:text="Submit for Approval"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
